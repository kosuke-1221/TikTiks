<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- NewsAction サーブレット -->
    <servlet>
        <servlet-name>NewsAction</servlet-name>
        <servlet-class>main.NewsAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsAction</servlet-name>
        <url-pattern>/News.action</url-pattern>
    </servlet-mapping>

    <!-- Shift_desired サーブレット -->
    <servlet>
        <servlet-name>Shift_desired</servlet-name>
        <servlet-class>main.Shift_desired</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shift_desired</servlet-name>
        <url-pattern>/Main/Shift_desiredServlet</url-pattern>
    </servlet-mapping>

    <!-- UserListServlet -->
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>main.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/UserListServlet</url-pattern>
    </servlet-mapping>

    <!-- ShiftRegisterServlet -->
    <servlet>
        <servlet-name>ShiftRegisterServlet</servlet-name>
        <servlet-class>main.ShiftRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShiftRegisterServlet</servlet-name>
        <url-pattern>/ShiftRegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- Vacation_DesiredAction -->
    <servlet>
        <servlet-name>Vacation_DesiredAction</servlet-name>
        <servlet-class>main.Vacation_DesiredAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShiftRegisterServlet</servlet-name>
        <url-pattern>/Vacation_Desired.action</url-pattern>
    </servlet-mapping>

    <!-- Password_ChangeAction -->
    <servlet>
        <servlet-name>Password_ChangeAction</servlet-name>
        <servlet-class>main.Password_ChangeAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Password_ChangeAction</servlet-name>
        <url-pattern>/Vacation_Desired.action</url-pattern>
    </servlet-mapping>


</web-app>